<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuctionSystem</title>

    <link rel="stylesheet" href="~/bundle/vendor.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bundle/main.min.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    @RenderSection("CustomCss", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AuctionSystem</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navBarContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="navBarContent" class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="List">All items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Contact us</a>
                        </li>
                    </ul>

                    <form class="form-inline my-2 my-lg-0 mx-auto" asp-controller="Items" asp-action="Search" method="get">

                        <div class="input-group">
                            <input class="form-control" type="search" placeholder="Search" aria-label="Search"
                                   value="@ViewData[WebConstants.SearchViewDataKey]" name="query">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData.ContainsKey(WebConstants.TempDataSuccessMessageKey))
        {
            <div class="alert alert-primary fade show mb-0" role="alert">
                <div class="container d-flex flex-row">
                    <i class="fas fa-check fa-2x align-self-center"></i>
                    <p class="pl-3 my-2" style="font-size: large;">@TempData[WebConstants.TempDataSuccessMessageKey]</p>
                    <div class="ml-auto">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        }

        @if (TempData.ContainsKey(WebConstants.TempDataErrorMessageKey))
        {
            <div class="alert alert-danger fade show mb-0" role="alert">
                <div class="container d-flex flex-row">
                    <i class="fas fa-exclamation-circle fa-2x align-self-center"></i>
                    <p class="pl-3 my-2" style="font-size: large;">@TempData[WebConstants.TempDataErrorMessageKey]</p>
                    <div class="ml-auto">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_CookieConsentPartial" />

    <script src="~/bundle/vendor.min.js" asp-append-version="true"></script>
    <script src="~/bundle/main.min.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
